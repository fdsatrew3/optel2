<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Optel - @ViewBag.Title</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")

</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("Optel", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					@if (Request.IsAuthenticated)
					{
						if (User.IsInRole("Admin"))
						{
							<li class="dropdown">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown">Edit data <b class="caret"></b></a>
								<ul class="dropdown-menu">
									<li>@Html.ActionLink("Extruders calibration data", "Index", "ExtruderCalibrationChanges")</li>
									<li>@Html.ActionLink("Extruders cooling lip data", "Index", "ExtruderCoolingLipChanges")</li>
									<li>@Html.ActionLink("Extruders nozzle data", "Index", "ExtruderNozzleChanges")</li>
									<li>@Html.ActionLink("Extruders recipe data", "Index", "ExtruderRecipeChanges")</li>
									<li>@Html.ActionLink("Extruders", "Index", "Extruders")</li>
									<li>@Html.ActionLink("Film recipe costs", "Index", "FilmRecipeCosts")</li>
									<li>@Html.ActionLink("Film recipes", "Index", "FilmRecipes")</li>
									<li>@Html.ActionLink("Customers", "Index", "FilmRecipeCosts")</li>
									<li>@Html.ActionLink("Orders", "Index", "Orders")</li>
								</ul>
							</li>
						}
						<li>@Html.ActionLink("Planning", "Contact", "Home")</li>
					}
				</ul>

				@Html.Partial("_LoginPartial")
			</div>
		</div>
	</div>
	<div class="container body-content">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year – Optel</p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
