<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<title>Optel - @ViewBag.Title</title>
	@Styles.Render("~/Content/css")
</head>
<body>
	<div class="top-menu row justify-content-between align-items-center">
		<div class="col-auto" style="padding-right: 0px;">
			<div class="row">
				<div class="col-auto mobile-menu-button align-middle top-menu-element" style="margin-left: 5px;">
					<div class="dropdown show">
						<a href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
							<img src="~/Images/menu-button-fix.png" /> &nbsp;<i class="fa fa-bars"></i>
						</a>
						<div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
							<a href="/ExtruderCalibrationChanges/" class="dropdown-item float-left"><img src="/Images/Menu/calibration-data.png" width="32px" height="32px">&nbsp;Edit extruders calibration data</a>
							<a href="/ExtruderNozzleChanges/" class="dropdown-item float-left"><img src="/Images/Menu/nozzle.png" width="32px" height="32px">&nbsp;Edit extruders nozzle data</a>
							<a href="/ExtruderCoolingLipChanges/" class="dropdown-item float-left"><img src="/Images/Menu/cooling_lip.png" width="32px" height="32px">&nbsp;Edit extruders cooling lip data</a>
							<a href="/ExtruderRecipeChanges/" class="dropdown-item float-left"><img src="/Images/Menu/extruder_recipe.png" width="32px" height="32px">&nbsp;Edit extruders recipe data</a>
							<a href="/Extruders/" class="dropdown-item float-left"><img src="/Images/Menu/extruder.png" width="32px" height="32px">&nbsp;Edit extruders</a>
							<a href="/FilmRecipeCosts/" class="dropdown-item float-left"><img src="/Images/Menu/film_recipe_cost.png" width="32px" height="32px">&nbsp;Edit film recipe costs</a>
							<a href="/FilmRecipes/" class="dropdown-item float-left"><img src="/Images/Menu/film_recipe.png" width="32px" height="32px">&nbsp;Edit film recipes</a>
							<a href="/Customers/" class="dropdown-item float-left"><img src="/Images/user_m.png" width="32px" height="32px">&nbsp;Edit customers</a>
							<a href="/Orders/" class="dropdown-item float-left"><img src="/Images/Menu/order.png" width="32px" height="32px">&nbsp;Edit orders</a>
							<a href="/Planning/Config" class="dropdown-item float-left"><img src="/Images/Menu/planning.png" width="32px" height="32px">&nbsp;Planning</a>
						</div>
					</div>
				</div>
				<div class="col-auto optel-logo top-menu-element desktop-ver">
					<img src="~/Images/favicon.png" width="48px" height="48px" />OPTEL
				</div>
			</div>
		</div>
		<div class="col-auto login-menu" style="padding-left: 0px;">
			@Html.Partial("_LoginPartial")
		</div>
	</div>
	<div class="row">
		<div class="col-auto left-page">
				<a href="/ExtruderCalibrationChanges/" class="btn btn-dark left-menu-btn"><div class="float-left"><img src="/Images/Menu/calibration-data.png" width="32px" height="32px">&nbsp;Edit extruders calibration data</div></a>
				<br>
				<a href="/ExtruderNozzleChanges/" class="btn btn-dark left-menu-btn"><div class="float-left"><img src="/Images/Menu/nozzle.png" width="32px" height="32px">&nbsp;Edit extruders nozzle data</div></a>
				<br>
				<a href="/ExtruderCoolingLipChanges/" class="btn btn-dark left-menu-btn"><div class="float-left"><img src="/Images/Menu/cooling_lip.png" width="32px" height="32px">&nbsp;Edit extruders cooling lip data</div></a>
				<br>
				<a href="/ExtruderRecipeChanges/" class="btn btn-dark left-menu-btn"><div class="float-left"><img src="/Images/Menu/extruder_recipe.png" width="32px" height="32px">&nbsp;Edit extruders recipe data</div></a>
				<br>
				<a href="/Extruders/" class="btn btn-dark left-menu-btn"><div class="float-left"><img src="/Images/Menu/extruder.png" width="32px" height="32px">&nbsp;Edit extruders</div></a>
				<br>
				<a href="/FilmRecipeCosts/" class="btn btn-dark left-menu-btn"><div class="float-left"><img src="/Images/Menu/film_recipe_cost.png" width="32px" height="32px">&nbsp;Edit film recipe costs</div></a>
				<br>
				<a href="/FilmRecipes/" class="btn btn-dark left-menu-btn"><div class="float-left"><img src="/Images/Menu/film_recipe.png" width="32px" height="32px">&nbsp;Edit film recipes</div></a>
				<br>
				<a href="/Customers/" class="btn btn-dark left-menu-btn"><div class="float-left"><img src="/Images/user_m.png" width="32px" height="32px">&nbsp;Edit customers</div></a>
				<br>
				<a href="/Orders/" class="btn btn-dark left-menu-btn"><div class="float-left"><img src="/Images/Menu/order.png" width="32px" height="32px">&nbsp;Edit orders</div></a>
				<br>
				<a href="/Planning/Config" class="btn btn-dark left-menu-btn"><div class="float-left"><img src="/Images/Menu/planning.png" width="32px" height="32px">&nbsp;Planning</div></a>
				<br>
		</div>
		<div class="col right-page">
			@RenderBody()
		</div>
	</div>
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
