@model Optel2.Models.ExtruderRecipeChange

@{
    ViewBag.Title = "Delete extruder recipe data";
}

<table class="custom-table-horizontal">
	<tr>
		<th>&nbsp;&nbsp;@Html.DisplayNameFor(model => model.From)&nbsp;&nbsp;</th>
		<td>&nbsp;&nbsp;@Html.DisplayFor(model => model.From)&nbsp;&nbsp;</td>
	</tr>
	<tr>
		<th>&nbsp;&nbsp;@Html.DisplayNameFor(model => model.On)&nbsp;&nbsp;</th>
		<td>&nbsp;&nbsp;@Html.DisplayFor(model => model.On)&nbsp;&nbsp;</td>
	</tr>
	<tr>
		<th>&nbsp;&nbsp;@Html.DisplayNameFor(model => model.Duration)&nbsp;&nbsp;</th>
		<td>&nbsp;&nbsp;@Html.DisplayFor(model => model.Duration)&nbsp;&nbsp;</td>
	</tr>
	<tr>
		<th>&nbsp;&nbsp;@Html.DisplayNameFor(model => model.ExtruderId)&nbsp;&nbsp;</th>
		<td>&nbsp;&nbsp;@Html.DisplayFor(model => model.Extruder.Name)&nbsp;&nbsp;</td>
	</tr>
</table>
<br />
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "editForm" }))
{
	@Html.AntiForgeryToken()
	<div class="row">
		<div class="col-auto">
			<a href="javascript:document.getElementById('editForm').submit()" class="btn btn-dark left-menu-btn"><div class="float-left"><img src="~/Images/Menu/delete.png" width="24px" height="24px">&nbsp;Delete</div></a>
		</div>
		<div class="col-auto">
			<a href="@Url.Action("Index")" class="btn btn-dark left-menu-btn"><div class="float-left"><img src="~/Images/Menu/cancel.png" width="24px" height="24px">&nbsp;Cancel</div></a>
		</div>
	</div>
}